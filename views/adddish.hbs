    <script>
        function readFile() {
            if (this.files && this.files[0]) {
                var FR = new FileReader();
                FR.addEventListener("load", function (e) {
                    try{
                    document.getElementById("img").src = e.target.result;
                    path=e.target.result;
                    }
                    catch(err){
                        alert("Error adding image")
                    }
                });
                FR.readAsDataURL(this.files[0]);
            }
        }
        document.getElementById("inp").addEventListener("change", readFile);
        function adddish(){
            var p=path;
            var name=document.getElementById("dn").value
            var price = document.getElementById("price").value;
            var e = document.getElementById("category");
            var strUser = e.options[e.selectedIndex].value;
            var e = document.getElementById("vegnonveg");
            var vegnonveg = e.options[e.selectedIndex].value;
            var xmlHttpRequest = new XMLHttpRequest()
            xmlHttpRequest.onreadystatechange = function () {
                if (this.readyState === 4) {
                    if (this.status === 200) {
                        console.log("added successsul")
                        window.location ="viewdishes"
                    }
                    else {
                        document.getElementById("error").innerText = JSON.parse(this.responseText).message
                    }
                }
            }
            xmlHttpRequest.open("POST", "/owner/Dish", true);
            xmlHttpRequest.setRequestHeader("Content-Type", "application/json");
            xmlHttpRequest.setRequestHeader("authorization",document.cookie)
            xmlHttpRequest.send(JSON.stringify({dishname:name,dishimage:p,price:price,vegnonveg:vegnonveg,category:strUser}));
        }
        function signout() {
            var xmlHttpRequest = new XMLHttpRequest()
            xmlHttpRequest.onreadystatechange = function () {
                if (this.readyState === 4) {
                    if (this.status === 200) {
                        console.log("signout success")
                        document.cookie = ("authorization=; expires = Thu, 01 Jan 1970 00:00:00 GMT");
                        window.location = "/"
                    }
                    else {
                        //document.getElementById("error").innerText = JSON.parse(this.responseText).message
                    }
                }
            }
            xmlHttpRequest.open("POST", "/user/signout", true)
            xmlHttpRequest.setRequestHeader("Content-Type", "application/json")
            xmlHttpRequest.setRequestHeader("authorization", document.cookie);
            xmlHttpRequest.send();

            function getCookie(cname) {
                var name = cname + "=";
                var decodedCookie = decodeURIComponent(document.cookie);
                var ca = decodedCookie.split(';');
                for (var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }
        }
