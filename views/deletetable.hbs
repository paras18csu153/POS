    <script>
        function deletetable(){
            var tablenumber=document.getElementById("tano").value;
            var xmlHttpRequest = new XMLHttpRequest()
            xmlHttpRequest.onreadystatechange = function () {
                if (this.readyState === 4) {
                    if (this.status === 200) {
                        console.log("deleted success")
                        window.location = "Tables"
                    }
                    else {
                        document.getElementById("error").innerText = JSON.parse(this.responseText).message
                    }
                }
            }
            xmlHttpRequest.open("DELETE", "/owner/Table", true);
            xmlHttpRequest.setRequestHeader("Content-Type", "application/json");
            xmlHttpRequest.setRequestHeader("authorization",document.cookie)
            xmlHttpRequest.send(JSON.stringify({tablenumber:tablenumber}));
        }
        function signout() {
            var xmlHttpRequest = new XMLHttpRequest()
            xmlHttpRequest.onreadystatechange = function () {
                if (this.readyState === 4) {
                    if (this.status === 200) {
                        console.log("signout success")
                        document.cookie = ("authorization=; expires = Thu, 01 Jan 1970 00:00:00 GMT");
                        window.location = "/"
                    }
                    else {
                        document.getElementById("error").innerText = JSON.parse(this.responseText).message
                    }
                }
            }
            xmlHttpRequest.open("POST", "/user/signout", true)
            xmlHttpRequest.setRequestHeader("Content-Type", "application/json")
            xmlHttpRequest.setRequestHeader("authorization", document.cookie);
            xmlHttpRequest.send();

            function getCookie(cname) {
                var name = cname + "=";
                var decodedCookie = decodeURIComponent(document.cookie);
                var ca = decodedCookie.split(';');
                for (var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') {
                        c = c.substring(1);
                    }
                    if (c.indexOf(name) == 0) {
                        return c.substring(name.length, c.length);
                    }
                }
                return "";
            }
        }
    </script>
